// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  email String
  phone String
}

model About {
  id Int @id @default(autoincrement())
  paragraph String
}

model Policy { //one to many self relation? or new table for headings?
  id Int @id @default(autoincrement()) //not autoincrement, to adjust location of content?
  instrument String
  headingId Int?
  heading String?
  headingRelation Policy? @relation("HeadingContents", fields: [headingId], references: [id]) //basically a junction table
  content Policy[] @relation("HeadingContents")
}

model Dates {
  id Int @id @default(autoincrement())
  start DateTime
  end DateTime
  title String @default("")
  allDay Boolean @default(false)
}